<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Anagram Checker"
        android:layout_marginTop="40dp"
        android:textColor="#2E7D32"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:paddingLeft="10dp"
            android:textColor="#2E7D32"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="120dp"
            android:text="@string/word_1"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_text1"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_weight="2"

            android:hint="@string/enter_first_word"

            android:minHeight="48dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="240dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="@string/word_2"
            android:textColor="#2E7D32"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_text2"

            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:layout_weight="2"
            android:hint="Enter second word"
            android:minHeight="48dp" />


    </LinearLayout>

    <Button
        android:id="@+id/check_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:backgroundTint="#E67212"
        android:text="Check"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>